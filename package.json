{
  "name": "opentui-ansi-vt",
  "version": "1.2.0",
  "description": "Convert raw PTY log files to JSON using Ghostty's terminal emulation library",
  "type": "module",
  "main": "./dist/ffi.js",
  "types": "./dist/ffi.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ffi.js",
      "types": "./dist/ffi.d.ts"
    },
    "./terminal-buffer": {
      "import": "./dist/terminal-buffer.js",
      "types": "./dist/terminal-buffer.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "zig-out/bin/pty-to-json"
  ],
  "scripts": {
    "dev": "bun --watch run tui/index.tsx",
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "bun run build",
    "test": "bun test"
  },
  "keywords": ["terminal", "pty", "vt100", "ansi", "ghostty", "opentui"],
  "author": "remorses",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/remorses/opentui-ansi-vt"
  },
  "peerDependencies": {
    "@opentui/core": "*"
  },
  "peerDependenciesMeta": {
    "@opentui/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
